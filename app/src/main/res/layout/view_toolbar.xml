<?xml version="1.0" encoding="utf-8"?>
<com.osh.exchangeapp.view.DefaultToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_toolbar_height"
    tools:context="com.osh.exchangeapp.activity.MainActivity"
    android:background="@color/default_toolbar_bg_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.FloatingActionButton
                android:layout_weight="1"
                android:id="@+id/action_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@color/products_toolbar_bg_color"
                android:src="@drawable/ic_vegetarian_food_96"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.FloatingActionButton
                android:layout_weight="1"
                android:id="@+id/action_my_receipts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@color/my_receipts_toolbar_bg_color"
                android:src="@drawable/ic_vegetarian_food_96"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.FloatingActionButton
                android:layout_weight="1"
                android:id="@+id/action_receipts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@color/receipts_toolbar_bg_color"
                android:src="@drawable/ic_vegetarian_food_96"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                />

        </FrameLayout>


    </LinearLayout>


</com.osh.exchangeapp.view.DefaultToolbar>
